
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Blog Admin - @ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:18%">
        <h3 class="w3-bar-item fw-bold my-2 fs-4 opacity-75">Blog Admin.</h3>
        <a href="/Blog/Index" class="w3-bar-item w3-button  ps-4"><i class="fa-solid fa-blog me-1"></i>Bloglar</a>
        <a href="/Yorum/Index" class="w3-bar-item w3-button  ps-4 "><i class="fa-solid fa-comments me-1"></i>Yorumlar</a>
        <a href="/Contact/Index" class="w3-bar-item w3-button ps-4"><i class="fa-solid fa-phone me-1"></i>İletişim </a>
        <a href="/Address/Index" class="w3-bar-item w3-button ps-4"><i class="fa-solid fa-map-location-dot me-1"></i>Adreslerim </a>

        <a href="/About/Index" class="w3-bar-item w3-button  ps-4"><i class="fa-solid fa-user me-1"></i>Hakkımızda </a>
        <a href="/Default/Index" target="_blank" class="w3-bar-item w3-button  ps-4"><i class="fa-solid fa-arrow-right me-1"></i>Siteye git </a>

    </div>

    <!-- Page Content -->
    <div style="margin-left:18%">

        <div class="container">
            @RenderBody()
        </div>

        

    </div>

</body>
</html>

