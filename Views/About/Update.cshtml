@model Travel_TripProject.Models.About
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .entete {
        width: 100%;
        height: 50px;
        background: rgb(241, 241, 241);
        border-radius: 5px;
        display: flex;
        align-items: center;
        padding-left: 20px;
    }
</style>

<div class="container py-2">
    <div class="entete my-4">
        <p class="fs-4 fw-bolder text-info"><i class="fa-solid fa-map-location-dot me-2"></i>Adreslerim Paneli</p>
    </div>
    <form method="post">
        <input type="hidden" name="AboutId" value="@Model.AboutId" />
        <label class="form-label">Açıklama</label>
        @Html.TextAreaFor(ab => ab.Description, new { @class = "form-control" })
        <label class="form-label">Resim</label>
        @Html.TextBoxFor(a => a.ImageUrl, new { @class = "form-control" })
        <button class="btn btn-primary my-3 text-white"><i class="fa fa-edıt me-1"></i>Güncelle</button>
    </form>
</div>

