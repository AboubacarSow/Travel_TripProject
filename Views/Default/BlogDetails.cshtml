@model Travel_TripProject.Models.Blog
@{
    ViewBag.Title = "BlogDetails";
    Layout = "~/Views/Shared/_tripLayout.cshtml";
}

<style>
    .title {
        padding-left: 40px;
    }
    .cadre{
        width:100%;
        height:150px;
        border:1px solid black;
        border-radius:2px;
        padding:0 20px;
        
    }
    .image-avatar{
        width:80px;
        height:80px;
        border-radius:50%
    }
</style>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 col-md-12 single-main">
            <p class="display-6 text-danger underline">@Model.Title</p>
           <div class="my-3  border-0">
                    <div style="width:100%">
                        <img src="@Model.ImageUrl" alt="" style="width:100%" class="rounded-2" />
                    </div>
                    <div class="my-2 px-2">
                        <p class="text-justify mt-2 text-secondary">
                            @Model.Description
                        </p>
                    </div>
           </div>  
           <div class="cadre d-flex align-items-center gap-3">
               <img src="~/Templates/webBlog/images/avatar.png" class="image-avatar" alt="avatar" />
               <p class="fs-5 fw-semibold text-secondary ">  Ousmane Camara</p>
           </div>
            <div class="comment_area">
                <p class="display-6 text-primary my-3"> Bir Yorum Bırakın</p>
                <form method="post" action="#">
                    <input type="hidden" name="BlogId" value="@Model.BlogId"/>
                    <input type="text" name="UserName" placeholder="Adı" required class="form-control my-2" />
                    <input type="email" name="UserEmail" placeholder="Mail" required class="form-control  my-2" />
                    <label class="form-label text-secondary">Yorumuz Giriniz</label>
                    <textarea type="text" name="CommentBody" placeholder="Yorumunuz" class="form-control my-2" > </textarea>
                   <button type="submit" class="btn btn-primary my-1">
                    Gönder</button>
                    <a class="btn btn-outline-warning" href="/Default/BlogList">
                        <i class="fa-solid fa-arrow-left"></i>
                    Geri Dön</a>
                </form>
            </div>
        </div>

        <div class="col-lg-4 col-md-12">
            <div>
                <p class="fs-5 fw-semibold title underline">Son Bloglar</p>
                <div class="list btn-group">
                    <ul>
                        <li><a href="#">Aliquam tincidunt mauris</a></li>
                        <li><a href="#">Vestibulum auctor dapibus  lipsum</a></li>
                        <li><a href="#">Nunc dignissim risus consecu</a></li>
                        <li><a href="#">Cras ornare tristiqu</a></li>
                    </ul>

                </div>
            </div>

            <div>
                <p class="fs-5 fw-semibold title underline">Son Yorumlar</p>
                <div class="list">
                    <ul>
                        <li><a href="#">Amada Doe </a> on <a href="#">Hello World!</a></li>
                        <li><a href="#">Peter Doe </a> on <a href="#"> Photography</a></li>
                        <li><a href="#">Steve Roberts  </a> on <a href="#">HTML5/CSS3</a></li>
                    </ul>
                </div>

            </div>

            <div class="categories">
                <p class="fs-5 fw-semibold title underline">CATEGORIES</p>
                <div class="list">
                    <ul>
                        <li><a href="#">Vivamus vestibulum nulla</a></li>
                        <li><a href="#">Integer vitae libero ac risus e</a></li>
                        <li><a href="#">Vestibulum commo</a></li>
                        <li><a href="#">Cras iaculis ultricies</a></li>
                    </ul>

                </div>
            </div>

        </div>


    </div>
</div>

